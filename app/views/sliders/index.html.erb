<%= content_tag :h1, "Front Sliders" %>

<%= link_to "New Slider", new_slider_path, class: "btn btn-large btn-primary" %>

<ul id="backSliders">
	<% @sliders.each do |slider| %>
		<%= content_tag :li do %>
				<%= image_tag slider.picture.url(:thumb) %>
				<%= link_to "Edit", edit_slider_path(slider), class: "btn btn-small" %>
				<%= link_to "Destroy", slider, method: :delete, data: {confirm: "Are You Sure?"}, class: "btn btn-danger btn-small" %>
		<% end %>
	<% end %>
</ul>