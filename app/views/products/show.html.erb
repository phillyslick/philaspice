<%= content_tag :h1, @product.name %>
<%= content_tag :h2, "in #{@product.category.name}" if @product.category %>

<%= content_tag :h2, "All Variants" %>
<ul>
<% @product.variants.each do |variant| %>
<li class='variant'>
	<%= content_tag :h3, "Name: #{variant.name}" %>
	<%= "Description: #{variant.description}" %>
	
	<%= content_tag :h4, "Prices | Weights" %>
	<ul class="pricesWeights">
		<% variant.prices.each do |price| %>
			<li class="priceWeight">
				<%= "#{price.weight.ounces} oz. for: " %>
				<%= "#{price.amount} USD" %>
			</li>
		<% end %>
	</ul>
</li>
<% end %>
</ul>
<%= link_to "Edit", edit_product_path(@product) %>
<%= link_to "All Products", products_path %>
