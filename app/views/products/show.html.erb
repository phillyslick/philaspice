<div class="span4">
	 <%= content_tag :h1, "Product Management" %>
	 <%= render :partial => 'navigation' %>
	 <%= link_to "New Product", new_product_path %>
</div>

<div id="rightDisplay" class="span8">
<div id="productShow" class-"media">
	<%= content_tag :h1, @product.name %>
	<%= content_tag :span, "in #{@product.category.name}", class: "label" if @product.category %>

	<%= content_tag :h2, "All Variants" %>
	<ul>
	<% @product.variants.each do |variant| %>
	<li class='variant'>
		<%= content_tag :h3, "Name: #{variant.name}" %>
		<%= "Description: #{variant.description}" %>
	
		<%= content_tag :h4, "Prices | Weights" %>
		<ul class="pricesWeights">
			<% variant.prices.each do |price| %>
				<li class="priceWeight">
					<%= "#{price.weight.ounces} oz. for: " %>
					<%= "#{price.amount} USD" %>
					
				</li>
			<% end %>
		</ul>
		<%= "Actions: #{link_to 'Edit', edit_product_variant_path(@product, variant)} | #{link_to 'Details', product_variant_path(@product,variant)}".html_safe %>
		
	
		<%= variant.active? ? (link_to 'Deactivate', product_variant_path(@product,variant), method: :delete) : (link_to 'Activate', revive_product_variant_path(@product, variant)) %>
	</li>
	<% end %>
	<%= link_to "Add Variant", new_product_variant_path(@product)%>
	</ul>
	<%= link_to "Edit", edit_product_path(@product) %>
	<%= link_to "All Products", products_path %>
</div>
</div>