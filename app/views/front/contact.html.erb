<% title " - Contact" %>

<h2 class="main">
	<%= @contact.title %>
</h2>

<div id="contactContent">
	<%= @contact.content %>
</div>

<%= form_tag contact_us_path, class: "contact" do %>

<p>
	<%= label_tag :name, "Name" %>
	<%= text_field_tag :name %>
</p>

<p>
	<%= label_tag :email, "E-Mail" %>
	<%= text_field_tag :email %>
</p>

<p>
	<%= label_tag :phone, "Phone" %>
	<%= text_field_tag :phone %>
</p>

<p>
	<%= label_tag :message, "Message" %>
	<%= text_area_tag :message %>
</p>

	<%= submit_tag "Send" %>
<% end %>




<%= render :partial => 'the_cart' %>
