<!DOCTYPE html>
<html>
<head>
  <title>Philaspice Categories</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<nav id="adminNav">
		<ul class="nav nav-tabs">
			<%= active_link_to("Dashboard", dashboard_path, :wrap_tag => :li) %>
			<%= active_link_to("Products", products_path, :wrap_tag => :li) %>
			<%= active_link_to("Categories", categories_path, :wrap_tag => :li) %>
			<%= active_link_to("Orders", stats_path, :wrap_tag => :li) %>
			<%= active_link_to("Front Sliders", sliders_path, :wrap_tag => :li) %>
			<%= active_link_to("Front Options", option_path, :wrap_tag => :li) %>
			<%= active_link_to("Additional Pages", pages_path, :wrap_tag => :li) %>
			
			<% if admin_signed_in? %>
			  <li>
			  <%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>        
			  </li>
			<% else %>
			  <li>
			  <%= link_to('Login', new_admin_session_path)  %>  
			  </li>
			<% end %>
		</ul>
	</nav>
	<div class="container-fluid">
	  <div class="row-fluid">
			<span class="span12">
				<%= render partial: "flash_messages", flash: flash %> 
				 <%= yield %>
			 </span>
	  </div>
	</div>



</body>
	<%= render partial: 'blank_modal' %>
</html>


