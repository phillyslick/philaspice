<%= content_tag :h1, @selected_variant.name %>
<%= content_tag :p, @product.alternate_names %>
<%= image_tag @selected_variant.image.url(:large) %>
<%= content_tag :div, @selected_variant.description %>

<%= form_for @line_item, remote: true do |f| %>
	<%= f.collection_select :variant_id, @product.variants.active.is_stocked, :id, :name %>
	<span id="priceSelect">
		<%= f.collection_select :price_id, @selected_variant.prices, :id, :weight_and_price %>
	</span>
	<%= f.submit "Add to Cart" %>
<% end %>


<div id="quickCart">
	<%= render :partial => 'cart_table' %>
</div>