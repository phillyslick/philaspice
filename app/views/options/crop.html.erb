<h1>Crop Image</h1>
<h2>Please Crop As Much As Possible</h2>
<%= image_tag @option.image.url(:large), id: "cropbox_option" %>

<%= form_for [@option] do |f| %>
  <div class="actions">
		
  	<% %w[x y w h].each do |attribute| %>
			<%= f.text_field "crop_#{attribute}" %>
		<% end %>
		
		<%= f.submit "crop" %>
  </div>
<% end %>