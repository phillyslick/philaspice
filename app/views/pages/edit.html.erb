<h1>Editing page</h1>

<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<h1><%= "#{@page.name} Page" %></h1>
	
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
	
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
	
	<% if @page.name == "About" %>
		<% if f.object.image? %>
			<%= image_tag f.object.image.url(:thumb) %>
		<% end %>
	  <div class="field">
	    <%= f.label :image %><br />
	    <%= f.file_field :image %>
	  </div>
	<% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Show', @page %> |
<%= link_to 'Back', pages_path %>
